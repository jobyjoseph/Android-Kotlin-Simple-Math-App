<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="8dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Addition"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" android:id="@+id/btnAddition" android:layout_weight="1"
                    android:background="#95D100" android:textColor="@android:color/white" android:layout_margin="8dp"
                    android:textSize="18sp"/>
            <Button
                    android:text="Subtraction"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" android:id="@+id/btnSubtraction" android:layout_weight="1"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <Button
                    android:text="Multiplication"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" android:id="@+id/btnMultiplication" android:layout_weight="1"/>
            <Button
                    android:text="Division"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" android:id="@+id/btnDivision" android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>